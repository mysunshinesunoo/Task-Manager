<div class="h-screen bg-gray-900 text-white p-4">
  <div class="max-w-4xl mx-auto p-6 bg-gray-800 rounded-lg shadow-md">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold">Task Details</h1>
    </div>

    <div class="bg-gray-700 p-4 rounded-lg shadow">
      <p class="text-lg font-medium mb-2"><%= @task.task_name %></p>
      <p class="mb-2"><%= @task.description %></p>
      <p class="text-gray-400">Due Date: <%= @task.due_date %></p>
    </div>

    <div class="mt-4 space-x-4">
      <%= link_to "Back", category_path(@category), class: "bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md inline-flex items-center justify-center" %>
    </div>
  </div>
</div>