<div class="bg-gray-900 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md bg-gray-800 rounded-lg shadow dark:border dark:border-gray-700 p-6">
    <h2 class="text-center text-xl font-bold leading-tight tracking-tight text-white mb-6">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- New Password Field -->
      <div>
        <%= f.label :password, "New password", class: "block mb-1 text-sm font-medium text-white" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-400 mb-1">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "bg-gray-700 border border-gray-600 text-white text-sm rounded-lg block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Confirm New Password Field -->
      <div>
        <%= f.label :password_confirmation, "Confirm new password", class: "block mb-1 text-sm font-medium text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-700 border border-gray-600 text-white text-sm rounded-lg block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Change my password", class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
      </div>
    <% end %>

    <!-- Additional Links (if necessary) -->
    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
      <%= link_to "Back to Sign In", new_session_path(resource_name), class: "text-primary-600 hover:underline dark:text-primary-500 text-sm font-medium" %>
    </div>
  </div>
</div>


