<div class="bg-gray-900 min-h-screen flex items-center justify-center">
  <div class="bg-gray-800 w-full max-w-md rounded-lg shadow dark:border dark:border-gray-700 p-6">
    <h2 class="text-center text-xl font-bold leading-tight tracking-tight text-white mb-6">Edit Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div>
        <%= f.label :email, class: "block mb-1 text-xs font-medium text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-700 border border-gray-600 text-white text-xs rounded-lg block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Password Field (Leave Blank if Not Changing) -->
      <div>
        <%= f.label :password, class: "block mb-1 text-xs font-medium text-white" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "(Leave blank if you don't want to change it)", class: "bg-gray-700 border border-gray-600 text-white text-xs rounded-lg block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-400"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= f.label :password_confirmation, class: "block mb-1 text-xs font-medium text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-700 border border-gray-600 text-white text-xs rounded-lg block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Current Password Field -->
      <div>
        <%= f.label :current_password, class: "block mb-1 text-xs font-medium text-white" %>
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Required to confirm changes", class: "bg-gray-700 border border-gray-600 text-white text-xs rounded-lg block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Update", class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
      </div>
    <% end %>

    <!-- Cancel Account Button -->
    <div class="mt-4">
      <h3 class="text-xs font-light text-gray-500 text-center mb-2">Unhappy?</h3>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" %>
    </div>

    <div class="mt-4 text-center">
      <%= link_to "Back", :back, class: "text-primary-600 hover:underline dark:text-primary-500 text-sm font-medium" %>
    </div>
  </div>
</div>
